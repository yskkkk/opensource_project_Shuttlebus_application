<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/backgroundcolor"
    tools:context=".BoardingPoint">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            >

            <TextView
                android:id="@+id/Guide_BoardingPoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="탑 승 지"
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/white"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="30sp"
                android:autoSizeMaxTextSize="70sp"
                android:autoSizeStepGranularity="2sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/Btn_SeongNam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="성남(분당)"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="30dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />

            <Button
                android:id="@+id/Btn_Dongcheon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="동천역(BS)"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />
            <Button
                android:id="@+id/Btn_Jukjeon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="죽전"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />
            <Button
                android:id="@+id/Btn_Ansan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="안산"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />
            <Button
                android:id="@+id/Btn_Suwon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="수원"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />
            <Button
                android:id="@+id/Btn_Incheon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:background="@drawable/underline"
                android:textColor="@color/white"
                android:text="인천(부평)"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

    </LinearLayout>

</LinearLayout>
