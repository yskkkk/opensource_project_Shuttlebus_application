<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:orientation="horizontal"
    tools:context=".RegionalMap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            >

            <TextView
                android:id="@+id/Guide_RegionalName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="50sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:maxLines="1"
                android:text="지역이름이 표시될 영역"
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/white" />

        </LinearLayout>

        <fragment
            android:id="@+id/googleMap"
            class="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    >

                    <TextView
                        android:id="@+id/Guide_MontoThu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="월~목"
                        android:fontFamily="@font/nanumgothicbold"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="2sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    >

                    <Button
                        android:id="@+id/Print_MonThuTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline"
                        android:backgroundTint="@color/blue"
                        android:text="시간이 출력될 영역"
                        android:fontFamily="@font/nanumgothicbold"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:enabled="false"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6.5"
                    >
                    <TextView
                        android:id="@+id/Guide_Fri"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="금"
                        android:fontFamily="@font/nanumgothicbold"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="30sp"
                        android:autoSizeStepGranularity="2sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    >
                    <Button
                        android:id="@+id/Print_FriTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/underline"
                        android:backgroundTint="@color/blue"
                        android:text="시간이 출력될 영역"
                        android:fontFamily="@font/nanumgothicbold"
                        android:maxLines="1"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="25sp"
                        android:autoSizeStepGranularity="2sp"
                        android:enabled="false"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
    </LinearLayout>
</LinearLayout>
