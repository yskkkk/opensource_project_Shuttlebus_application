<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="220dp"
    android:background="@color/white"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".ChangeUserInfoPopup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/Guide_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="비밀번호 변경"
            android:fontFamily="@font/nanumgothicbold"
            android:textColor="@color/black"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/underline"
        android:backgroundTint="#81CDCDCD"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <EditText
            android:id="@+id/ET_CurrentInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/gray"
            android:ems="10"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:hint="현재 비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ET_ChangePassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/gray"
            android:ems="10"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:hint="변경할 비밀번호를 입력해주세요."
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <TextView
            android:id="@+id/TV_PasswordCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="확인"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="15sp"
            android:maxLines="1"
            android:backgroundTint="#00FFFFFF" />

    </LinearLayout>

</LinearLayout>
