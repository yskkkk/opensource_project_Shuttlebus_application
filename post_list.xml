<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundcolor"
        android:elevation="10dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Guide_BoardingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출발지: "
                android:textColor="@color/black"
                android:fontFamily="@font/nanumgothicbold"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/Read_BoardingPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Guide_Destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목적지: "
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/Read_Destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Guide_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간: "
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/Read_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Guide_Personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원: "
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

            <TextView
                android:id="@+id/Read_Personnel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/nanumgothicbold"
                android:textColor="@color/black"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
